<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.AddressDao">
    <select id="getUserAddresses" parameterType="int" resultType="entity.Address">
        select * from address where address.user_id=#{user_id}
    </select>
    <select id="getAddressById" parameterType="int" resultType="entity.Address">
        select * from address where address.id=#{id}
    </select>
    <insert id="insertAddress" parameterType="entity.Address">
        insert into address(name,address,phone,user_id)
        values(#{name},#{address},#{phone},#{user_id})
    </insert>
    <update id="updateAddress" parameterType="entity.Address">
        update address
        <set>
            <if test="name!=null">name=#{name},</if>
            <if test="address!=null">address=#{address},</if>
            <if test="phone!=null">phone=#{phone},</if>
        </set>
        where id=#{id}
    </update>
    <delete id="deleteAddress" parameterType="int">
        delete from address where id=#{id}
    </delete>
</mapper>