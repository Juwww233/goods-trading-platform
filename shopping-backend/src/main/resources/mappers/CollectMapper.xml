<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.CollectDao">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="entity.Collect">
        <id column="id" property="id"/>
        <result column="goods_id" property="goodsId"/>
        <result column="user_id" property="userId"/>
    </resultMap>

    <!-- 根据用户ID查询收藏列表 -->
    <select id="selectByUserId" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM collect
        WHERE user_id = #{userId}
    </select>

    <!-- 根据用户ID和商品ID删除收藏 -->
    <delete id="deleteByUserAndGood" parameterType="map">
        DELETE FROM collect
        WHERE user_id = #{userId}
          AND goods_id = #{goodsId}
    </delete>

    <!-- 添加收藏（可选，若需要"加入购物车"功能） -->
    <insert id="insert" parameterType="entity.Collect" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO collect (goods_id, user_id)
        VALUES (#{goodsId}, #{userId})
    </insert>

    <!-- 查询用户是否已收藏商品（可选） -->
    <select id="existsByUserAndGood" parameterType="map" resultType="int">
        SELECT COUNT(1) FROM collect
        WHERE user_id = #{userId}
          AND goods_id = #{goodsId}
    </select>

</mapper>