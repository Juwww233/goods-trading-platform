<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.NoticeDao">
    <!-- 查询全部 -->
    <select id="getAllNotice" resultType="entity.Notice">
        select * from notice
    </select>

    <!-- 按用户查询 -->
    <select id="getNoticeByUser" parameterType="String" resultType="entity.Notice">
        select * from notice where user=#{user}
    </select>

    <!-- 新增公告 -->
    <insert id="insertNotice" parameterType="entity.Notice">
        insert into notice(title, content, time, user)
        values (#{title}, #{content}, #{time}, #{user})
    </insert>

    <!-- 删除公告 -->
    <delete id="deleteNotice" parameterType="int">
        delete from notice where id=#{id}
    </delete>

    <!-- 编辑公告 -->
    <update id="updateNotice" parameterType="entity.Notice">
        update notice
        set title=#{title},
            content=#{content},
            time=#{time},
            user=#{user}
        where id=#{id}
    </update>

    <!-- 分页查询 -->
    <select id="getNoticeByPage" parameterType="map" resultType="entity.Notice">
        select * from notice
        <where>
            <if test="title != null and title != ''">
                and title like concat('%', #{title}, '%')
            </if>
        </where>
        <!-- 按id降序（核心修改） -->
        order by id desc
        limit #{offset}, #{pageSize}
    </select>

    <!-- 查询总数 -->
    <select id="countNotice" parameterType="map" resultType="int">
        select count(*) from notice
        <where>
            <if test="title != null and title != ''">
                and title like concat('%', #{title}, '%')
            </if>
        </where>
    </select>
</mapper>